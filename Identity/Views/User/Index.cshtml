@model List<AppUser>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<a asp-action="Create" asp-controller="User" class="d-inline-block my-2">Yeni kullanıcı ekle</a>
<table class="table table*hovered table-bordered table-sm">

    <thead>
        <tr>
            <th>Kullanıcı Adı</th>
            <th>Cinsiyet</th>
            <th>Email</th>
            <th>Role Bilgisi</th>
            <th></th>

        </tr>
    </thead>
    <tbody>
        @foreach(var item in Model)
        {
            <tr>
                <td>@item.UserName</td>
                <td>@item.Gender</td>
                <td>@item.Email</td>
                <td><GetUserInfo user-id="@item.Id"></GetUserInfo></td>
                <td></td>


            </tr>
            
        }



    </tbody>

</table>

